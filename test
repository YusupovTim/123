from random import *
import file_operations
from faker import Faker


fake = Faker('ru_RU')
letters = {
    'а': 'а͠', 'б̋': 'б̋', 'в': 'в͒͠',
    'г': 'г͒͠', 'д': 'д̋', 'е': 'е͠',
    'ё': 'ё͒͠', 'ж': 'ж͒', 'з': 'з̋̋͠',
    'и': 'и', 'й': 'й͒͠', 'к': 'к̋̋',
    'л': 'л̋͠', 'м': 'м͒͠', 'н': 'н͒',
    'о': 'о̋', 'п': 'п̋͠', 'р': 'р̋͠',
    'с': 'с͒', 'т': 'т͒', 'у': 'у͒͠',
    'ф': 'ф̋̋͠', 'х': 'х͒͠', 'ц': 'ц̋',
    'ч': 'ч̋͠', 'ш': 'ш͒͠', 'щ': 'щ̋',
    'ъ': 'ъ̋͠', 'ы': 'ы̋͠', 'ь': 'ь̋',
    'э': 'э͒͠͠', 'ю': 'ю̋͠', 'я': 'я̋',
    'А': 'А͠', 'Б': 'Б̋', 'В': 'В͒͠',
    'Г': 'Г͒͠', 'Д': 'Д̋', 'Е': 'Е',
    'Ё': 'Ё͒͠', 'Ж': 'Ж͒', 'З': 'З̋̋͠',
    'И': 'И', 'Й': 'Й͒͠', 'К': 'К̋̋',
    'Л': 'Л̋͠', 'М': 'М͒͠', 'Н': 'Н͒',
    'О': 'О̋', 'П': 'П̋͠', 'Р': 'Р̋͠',
    'С': 'С͒', 'Т': 'Т͒', 'У': 'У͒͠',
    'Ф': 'Ф̋̋͠', 'Х': 'Х͒͠', 'Ц': 'Ц̋',
    'Ч': 'Ч̋͠', 'Ш': 'Ш͒͠', 'Щ': 'Щ̋',
    'Ъ': 'Ъ̋͠', 'Ы': 'Ы̋͠', 'Ь': 'Ь̋',
    'Э': 'Э͒͠͠', 'Ю': 'Ю̋͠', 'Я': 'Я̋',
    ' ': ' '
}

skill = "Стремительный прыжок", "Электрический выстрел","Ледяной удар", "Кислотный взгляд", "Тайный побег", "Ледяной выстрел", "Огненный заряд"

for old, new in letters.items():
    skill = skill.replace(old, new)
print(skill)

context = {
  "first_name": fake.first_name(),
  "last_name": fake.last_name(),
  "job": fake.job(),
  "town": fake.city(),
  "strength": randint(3, 18),
  "agility": randint(3, 18),
  "endurance": randint(3, 18),
  "intelligence": randint(3, 18),
  "luck": randint(3,18),
  "skill_1": choice(sample(skill,1, counts=None)),
  "skill_2": choice(sample(skill,1, counts=None)),
  "skill_3": choice(sample(skill,1, counts=None)),

}

file_operations.render_template("charsheet.svg", "result.svg", context)
